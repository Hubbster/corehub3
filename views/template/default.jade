block vars
  - var bodyClass = '' // Be aware that body class is also used for translation in json.
  - var useFooter = false

doctype
//if lt IE 7
  html.no-js.lt-ie9.lt-ie8.lt-ie7(lang="en")
//if IE 7
  html.no-js.lt-ie9.lt-ie8(lang="en")
//if IE 8
  html.no-js.lt-ie9(lang="en")
//if gt IE 8
  html.no-js(lang="en")
head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  title
    |CoreHub - #{title}
  meta(name="description", content="")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  link(rel='stylesheet', type='text/css', href='/public/css/application.css')
  link(href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700', rel='stylesheet', type='text/css')
  script(src="/public/js/vendor/modernizr-2.6.2.min.js")
body(class='#{bodyClass}')
  //if lt IE 9‚Äù
    p.browsehappy
      |You are using an 
      strong |outdated browser
      |. Please 
      a(href="http://browsehappy.com/")
        |upgrade your browser
      |to improve your experience of CoreHub.
  include ../partials/header
  .wrap
    header
      h1.page-header(data-i18n='page.#{bodyClass}.name')
    .main
      block main
    if useFooter == true
      footer
        block footer
    else

  block scripts
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="/public/js/plugins.js")
    script(src="/public/js/main.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/i18next/1.6.3/i18next-1.6.3.min.js")
    script.
      i18n.init(function(t) {
        $("h1.page-header").i18n();
      });